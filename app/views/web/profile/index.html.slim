h2 = t('profile.index.title')

= link_to t('bulletins.new.title'), new_web_bulletin_path, class: ["btn","btn-primary"]

table.table
    thead
        tr
            th.col = t('bulletins.index.item_title')
            th.col = t('bulletins.index.state')
            th.col = t('bulletins.index.created_at')
            th.col = t('bulletins.index.actions')
    tbody
        - @bulletins.each do |bulletin|
            tr
                td = bulletin.title
                td Some state
                td = bulletin.created_at
                td
                     = link_to t('bulletins.index.show'), web_bulletin_path(bulletin)
                     = link_to t('bulletins.index.edit'), edit_web_bulletin_path(bulletin)
                     = link_to t('bulletins.index.send_to_moderation'), web_bulletin_path(bulletin)
                     = link_to t('bulletins.index.send_to_archive'), web_bulletin_path(bulletin)
